<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aprosoft.bfitgym.ClassDetail">


    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:id="@+id/ivimage"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivimage"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#da2121"
        android:layout_marginTop="10dp"
        android:text="class name"
        android:textStyle="bold"
        android:id="@+id/classname"
        />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/classname"
        android:layout_margin="5dp"
        android:id="@+id/trainerimg"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/classname"
        android:layout_toRightOf="@+id/trainerimg"
        android:textSize="18sp"
        android:text="trainer name"
        android:id="@+id/trainername"
        android:textColor="#000"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/trainername"
        android:layout_toRightOf="@+id/trainerimg"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Duration"
        android:id="@+id/duration"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/trainerimg"
        android:textSize="18sp"
        android:text="Date"
        android:id="@+id/date"
        android:textColor="#000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/trainerimg"
        android:textSize="18sp"
        android:text="Time"
        android:layout_toRightOf="@+id/date"
        android:id="@+id/time"
        android:textColor="#000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/date"
        android:textSize="18sp"
        android:text="Instructions"
        android:id="@+id/instruction"
        android:textColor="#000"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/instruction"
        android:textSize="18sp"
        android:text="Instructions"
        android:id="@+id/instructiontext"
        android:textColor="#000"
        />


</RelativeLayout>
